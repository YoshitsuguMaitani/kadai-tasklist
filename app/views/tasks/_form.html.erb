<!--form_withで始まり、endで終わる。これはformタグと同様の役割だと考える。-->
<!--local: true を抜かした場合、画面遷移しない通信になる。外部サイトへの通信に効果を発揮する。-->
<%= form_with(model: task, local: true) do |f| %>
 <%= render 'layouts/error_messages', model: f.object %>

 <%= f.label :status, "ステータス" %>
 <%= f.text_field :status %>


<!--フォームの入力欄の設定-->
 <%= f.label :content, "タスク内容" %>
 <%= f.text_field :content %>
 <!--送信ボタンの生成-->
 <%= f.submit "投稿" %>
<% end %>